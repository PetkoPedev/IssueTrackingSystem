@model IssueTrackingSystem.Web.ViewModels.Articles.CreateArticleInputModel
@{ 
    this.ViewData["Title"] = "Creating Articles";
    var categoryItems = Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}
<h1>Creating article for the knowledgebase</h1>
<form method="post" class="col-md-6 offset-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ArticleName"></label>
        <input asp-for="ArticleName" class="form-control" />
        <span asp-validation-for="ArticleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea id="tinymcetextarea" asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>