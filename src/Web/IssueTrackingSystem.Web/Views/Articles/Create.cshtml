@model IssueTrackingSystem.Web.ViewModels.Articles.CreateArticleInputModel
@{
    this.ViewData["Title"] = "Creating Articles";
    var categoryItems = Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}
<partial name="~/Views/Shared/_HeadAreaPartial.cshtml" />

<form method="post" class="col-md-6 offset-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ArticleName">Name of the article</label>
        <input asp-for="ArticleName" class="form-control" />
        <span asp-validation-for="ArticleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Categories</label>
        <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>
<partial name="~/Views/Shared/_SidebarMenuPartial.cshtml" />
<partial name="~/Views/Shared/_RightPaneAreaPartial.cshtml" />