@{ 
    ViewData["Title"] = "_RightPaneAreaPartial";
}

<!-- offset area start -->
<div class="offset-area">
    <div class="offset-close"><i class="ti-close"></i></div>
    <ul class="nav offset-menu-tab">
        <li><a data-toggle="tab" href="#settings">Settings</a></li>
    </ul>
    <div class="offset-content tab-content">
        <div id="settings" class="tab-pane fade in show active">
            <div class="offset-settings">
                <h4>General Settings</h4>
                <div class="settings-list">

                    <div class="list-group">
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            @if (this.User.IsInRole(IssueTrackingSystem.Common.GlobalConstants.AdministratorRoleName))
                            {
                                <button type="button" class="list-group-item list-group-item-action">
                                    <h4><a asp-area="Administrator" asp-controller="Dashboard" asp-action="Index">Admin Home</a></h4>
                                </button>
                                <button type="button" class="list-group-item list-group-item-action">
                                    <h4><a asp-area="" asp-controller="Home" asp-action="Index">Users</a></h4>
                                </button>
                                <button type="button" class="list-group-item list-group-item-action">
                                    <h4><a asp-area="" asp-controller="Home" asp-action="Index">Tickets</a></h4>
                                </button>
                                <button type="button" class="list-group-item list-group-item-action">
                                    <h4><a asp-area="" asp-controller="Home" asp-action="Index">Articles</a></h4>
                                </button>
                                <button type="button" class="list-group-item list-group-item-action">
                                    <h4><a asp-area="" asp-controller="Home" asp-action="Index">My Notes</a></h4>
                                </button>
                            }
                            else if (this.User.IsInRole(IssueTrackingSystem.Common.GlobalConstants.ModeratorRoleName))
                            {
                                <button type="button" class="list-group-item list-group-item-action">
                                    <h4><a asp-area="" asp-controller="Home" asp-action="Index">Moderator Home</a></h4>
                                </button>
                                <button type="button" class="list-group-item list-group-item-action">
                                    <h4><a asp-area="" asp-controller="Home" asp-action="Index">Tickets</a></h4>
                                </button>
                                <button type="button" class="list-group-item list-group-item-action">
                                    <h4><a asp-area="" asp-controller="Home" asp-action="Index">Articles</a></h4>
                                </button>
                                <button type="button" class="list-group-item list-group-item-action">
                                    <h4><a asp-area="" asp-controller="Home" asp-action="Index">My Notes</a></h4>
                                </button>
                            }
                            else
                            {
                                <button type="button" class="list-group-item list-group-item-action">
                                    <h4><a asp-area="" asp-controller="Home" asp-action="Index">User Home</a></h4>
                                </button>
                                
                            }
                            <button type="button" class="list-group-item list-group-item-action">
                                <h4><a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a></h4>
                            </button>
                        }
                        else
                        {
                            <button type="button" class="list-group-item list-group-item-action">
                                <h4><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></h4>
                            </button>
                            <button type="button" class="list-group-item list-group-item-action">
                                <h4><a asp-area="Identity" asp-page="/Account/Login">Login</a></h4>
                            </button>
                            <button type="button" class="list-group-item list-group-item-action">
                                <h4><a asp-area="Identity" asp-page="/Account/Register">Register</a></h4>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>