@model IssueTrackingSystem.Web.ViewModels.Administration.Dashboard.IndexViewModel
@{
    this.Layout = "_Layout";
    this.ViewData["Title"] = "Admin dashboard";
}

<h1>@this.ViewData["Title"]</h1>
<partial name="~/Views/Shared/_SidebarMenuPartial.cshtml" />
<partial name="~/Views/Shared/_HeadAreaPartial.cshtml" />
<div class="text-center">
    <h2 class="display-4">Your current system stats:</h2>
    <div class="col-md-4 offset-md-4">
        <p>You currently have:</p>
        <ul class="list-group">
            <li class="list-group-item bg-info">All Tickets: @Model.TicketsCount</li>
            <li class="list-group-item bg-light">All Notes Created by Users: @Model.NotesCount</li>
            <li class="list-group-item bg-info">All Articles Created by Users: @Model.ArticlesCount</li>
        </ul>
    </div>
</div>
